<div class="container">
  <div class='header text-center'>
    <h2>Robot Roster</h2>
  </div>
  <div class='row'>
    <% @robots.each do |robot| %>
      <h3 class='jumbotron'><%= robot.id %>: <a href="/robots/<%= robot.id %>"><%= robot.name %></a></h3>
      <a href="/robots/<%= robot.id %>/edit">Edit</a>

      <form action='/robots/<%= robot.id %>' method='POST' >
        <input type='hidden' name='_method' value='delete'>
        <input type='submit' value='Delete'>
      </form>
    <% end %>
  </div>
</div>
